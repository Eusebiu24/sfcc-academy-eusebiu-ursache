<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
  <group formid="test">

    <field formid="title" description="description.form.title.test" type="string"/>

    <field formid="title2" description="description.form.title.test" type="string"/>

    <field formid="firstname" label="label.input.firstname.test" mandatory="true" max-length="50" missing-error="error.message.required" range-error="error.message.50orless" type="string" />

    <field formid="lastname" label="label.input.lastname.test" mandatory="true" max-length="50" missing-error="error.message.required" range-error="error.message.50orless" type="string" />

    <field formid="email" label="label.input.email.test" mandatory="true" max-length="50" missing-error="error.message.required" parse-error="error.message.parse.email.test.form" range-error="error.message.50orless" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" value-error="ValueErrorText" type="string"/>
    <!-- TODO value-error not comming back from the platform -->
  </group>
</form>
